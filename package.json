{
  "name": "pedromagalhaes",
  "description": "Pedro Magalhaes",
  "version": "1.0.0",
  "author": "Pedro Magalhaes <pedro.magalhaes@outlook.com>",
  "engines": {
    "node": ">=10.15"
  },
  "scripts": {
    "dev": "yarn clean:all && yarn install && yarn cross-env NODE_ENV=development yarn nodemon:go",
    "build": "yarn lint:js && yarn clean:all && yarn build:app",
    "build:job": "yarn clean:all && yarn build:app",
    "build:export": "yarn clean:all && yarn build:app && yarn next export src/app",
    "build:app": "./node_modules/.bin/cross-env NODE_ENV=production environment=build yarn next build src/app",
    "build:debug": "yarn clean:all && yarn install --check-files && yarn cross-env x_app_debug=true yarn build:job",
    "start": "pm2-runtime ecosystem.config.js --env production --formatted",
    "start:dev": "yarn cross-env NODE_ENV=production environment=dev yarn node:go:debug --api-cache",
    "start:debug": "yarn cross-env NODE_ENV=production DEBUG=*,-nodemon:watch*,-eslint*,-babel* yarn node:go:debug",
    "nodemon:go": "yarn nodemon ./src/server/index.js",
    "node:go": "node ./src/server/index.js",
    "node:go:debug": "yarn cross-env x_app_debug=true node ./src/server/index.js",
    "lint": "yarn lint:js && yarn lint:style",
    "lint:js": "./node_modules/.bin/eslint ./ -c ./.eslintrc.js --fix --format=codeframe",
    "lint:style": "yarn stylelint ./src",
    "precommit": "lint-staged",
    "pm2:logs": "pm2 logs",
    "pm2:stop": "pm2 stop all",
    "pm2:reload": "pm2 reload all",
    "pm2:monitor": "pm2 monit",
    "clean:all": "yarn clean:babel_cache && yarn clean:npm_cache && yarn clean:next_cache",
    "clean:npm_cache": "rimraf node_modules/.cache",
    "clean:babel_cache": "rimraf node_modules/.cache/babel-loader",
    "clean:next_cache": "rimraf src/app/.next"
  },
  "dependencies": {
    "@babel/core": "7.3.4",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-react": "^7.0.0",
    "@next/bundle-analyzer": "^9.1.1",
    "@svgr/webpack": "^4.2.0",
    "@zeit/next-css": "^1.0.1",
    "@zeit/next-source-maps": "^0.0.3",
    "apisauce": "^1.0.2",
    "apollo-boost": "^0.1.16",
    "apollo-client": "^2.0.3",
    "apollo-link-context": "^1.0.17",
    "apollo-server-express": "^2.5.0",
    "axios-retry": "^3.1.2",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "babel-plugin-graphql-tag": "^2.5.0",
    "babel-plugin-module-resolver": "^3.2.0",
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "connect-mongo": "^2.0.3",
    "cookie": "^0.4.0",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "cross-env": "^5.2.1",
    "cssnano": "^4.1.10",
    "dotenv": "^7.0.0",
    "express": "^4.14.0",
    "express-graphql": "^0.7.1",
    "express-session": "^1.16.1",
    "express-validator": "^5.3.1",
    "file-loader": "^3.0.1",
    "formik": "^1.5.4",
    "graphql": "^14.0.2",
    "graphql-tag": "^2.5.0",
    "isomorphic-unfetch": "^3.0.0",
    "lint-staged": "^8.1.5",
    "mongoose": "^5.5.1",
    "nanoid": "^2.0.1",
    "next": "10.0.4",
    "next-compose-plugins": "^2.1.1",
    "next-routes": "^1.4.2",
    "next-transpile-modules": "2.3.1",
    "nodejs-nodemailer-outlook": "^1.1.0",
    "nodemailer": "^6.4.16",
    "nodemon": "^1.19.2",
    "nprogress": "^0.2.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "postcss-easy-import": "^3.0.0",
    "prop-types": "^15.6.2",
    "query-string": "^6.5.0",
    "react": "16.9.0",
    "react-apollo": "^2.1.11",
    "react-dom": "16.9.0",
    "react-google-maps": "^9.4.5",
    "recompose": "^0.30.0",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "0.88.1",
    "styled-components": "4.3.2",
    "url-loader": "^1.1.2",
    "uuid": "^3.3.2",
    "webpack": "^4.29.6",
    "webpack-bundle-size-analyzer": "^3.1.0",
    "yup": "^0.27.0"
  },
  "devDependencies": {
    "@types/react": "^16.9.2",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-babel-module": "^5.0.1",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-module-resolver": "^0.8.0",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "1.2.0",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-unicorn": "12.1.0",
    "prettier": "^1.17.1",
    "stylelint": "^10.0.1",
    "stylelint-config-recommended": "^2.2.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.7.0",
    "typescript": "^3.6.2"
  },
  "nodemonConfig": {
    "watch": [
      "./src/server"
    ],
    "ignore": [
      ".git",
      "node_modules",
      "./src/app/.next/**"
    ],
    "events": {
      "restart": "rimraf ./src/app/.next/"
    },
    "delay": "2500"
  },
  "license": "MIT",
  "lint-staged": {
    "concurrent": false,
    "linters": {
      "*.{css,scss}": [
        "prettier",
        "git add"
      ],
      "*.{js,jsx}": [
        "./node_modules/.bin/eslint ./ -c ./.eslintrc.js --fix --format=codeframe",
        "git add"
      ]
    }
  }
}
